{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="article">

  <div class="article-head">
    <div class="info-meta">
      {% if page.header.date %} <span class="info-date">{{ page.header.date|e }}</span> {% endif %}
      {% if page.header.author %} <span class="info-author">{{ page.header.author|e }}</span> {% endif %}           {# TODO: multiple authors #}
    </div>

    <h1>{{ page.title }}</h1>
    {% include 'partials/feed_title_image.html.twig' with { 'page' : page, 'showCaption': true } %}
  </div>

  <div class="article-text">
  {% block article %}
    {{ page.content|raw }}
  {% endblock %}
  </div>

</div>
{% endblock %}